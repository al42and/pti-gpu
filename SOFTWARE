finalize:
  config:
    commands:
    - echo "source /opt/intel/oneapi/setvars.sh" >> ~/.bashrc
    - '[ ! -d "/sys/module/i915/parameters" ] && sudo mkdir -p /sys/module/i915/parameters'
    - '[ ! -d "/proc/sys/dev/i915" ] && sudo mkdir -p /proc/sys/dev/i915'
    - echo N | sudo tee /sys/module/i915/parameters/enable_hangcheck
    - echo 0 | sudo tee /proc/sys/dev/i915/perf_stream_paranoid
